@model DateModel

<input id="datePicker" value="@Model.StartDate" type="date" />
<input value="@Model.EndDate" type="date" />

<script>

    document.getElementById("datePicker").onchange = function(event) {

        fetch("@Url.Action("UpdateDate", "Home")", {
            method: 'post',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ StartDate: this.value })
        });
    }

</script>
